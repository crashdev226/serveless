{
  "IamPolicyLambdaExecution": {
    "Type": "AWS::IAM::Policy",
    "Properties": {
      "PolicyName": {
        "Fn:Join": [
          "-",
          [
            { "Ref": "AWS::Region" },
            "${self:service}",
            "lambda"
          ]
        ]
      },
      "PolicyDocument": {
        "Version": "2012-10-17",
        "Statement": [
          {
            "Effect": "Allow",
            "Action": [
              "logs:CreateLogGroup",
              "logs:CreateLogStream",
              "logs:PutLogEvents"
            ],
            "Resource": {
              "Fn:Join": [
                ":",
                [
                  "arn:aws:logs",
                  { "Ref": "AWS::Region" },
                  { "Ref": "AWS::AccountId" },
                  "log-group:/aws/lambda/*:*:*"
                ]
              ]
            }
          }
        ]
      },
      "Roles": [
        {
          "Ref": "IamRoleLambdaExecution"
        }
      ]
    }
  }
}
